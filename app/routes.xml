<?xml version='1.0' standalone='yes'?>
<paths>
    <default>
        <path method="GET">
            <controller>League</controller>
            <action>getList</action>
        </path>
    </default>

    <path method="GET">
        <uri>{leagueId}/matches</uri>
        <controller>League</controller>
        <action>getMatches</action>
    </path>

    <path method="POST">
        <uri>league</uri>
        <controller>League</controller>
        <action>createLeague</action>
    </path>

    <path method="POST">
        <uri>{leagueId}/match/{matchId}</uri>
        <controller>League</controller>
        <action>updateScore</action>
    </path>

    <path method="GET">
        <uri>{leagueId}/scores</uri>
        <controller>League</controller>
        <action>getScores</action>
    </path>
</paths>
